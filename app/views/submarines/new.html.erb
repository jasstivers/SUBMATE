<div class="container mt-5">
  <h1>Create a New Submarine</h1>

  <% if @submarine.errors.any? %>
    <div class="alert alert-danger">
      <h4>There were some errors with your submission:</h4>
      <ul>
        <% @submarine.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= simple_form_for @submarine do |f| %>
    <div class="mb-3">
      <%= f.input :name, label: 'Submarine Name', input_html: { class: 'form-control' } %>
    </div>

    <div class="mb-3">
      <%= f.input :price, label: 'Price', input_html: { class: 'form-control' } %>
    </div>

    <div class="mb-3">
      <%= f.input :submarine_class, label: 'Class', input_html: { class: 'form-control' } %>
    </div>

    <div class="mb-3">
      <%= f.input :amenities, label: 'Amenities', input_html: { class: 'form-control' } %>
    </div>

    <div class="mb-3">
      <%= f.input :description, label: 'Description', as: :text, input_html: { class: 'form-control' } %>
    </div>

    <div class="mb-3">
      <%= f.input :weight_ton, label: 'Weight (ton)', input_html: { class: 'form-control' } %>
    </div>

    <div class="mb-3">
      <%= f.input :prod_year, label: 'Production Year', input_html: { class: 'form-control' } %>
    </div>

    <div class="mb-3">
      <%= f.input :speed, label: 'Speed', input_html: { class: 'form-control' } %>
    </div>

    <div class="mb-3">
      <%= f.input :image_tag, as: :file, label: 'Submarine Image', input_html: { class: 'form-control' } %>
    </div>

    <div>
      <%= f.submit 'Create Submarine', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to 'Back', submarines_path, class: 'btn btn-secondary' %>
  </div>
</div>
